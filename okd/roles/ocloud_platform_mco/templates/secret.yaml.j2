---
apiVersion: v1
kind: Secret
metadata:
  name: thanos-object-storage
  namespace: "{{ ocloud_platform_mco_namespace }}"
type: Opaque
stringData:
  thanos.yaml: |
    type: s3
    config:
      bucket: "thanos"
      endpoint: "minio:9000"
      insecure: true
      access_key: "{{ ocloud_platform_mco_access_key }}"
      secret_key: "{{ ocloud_platform_mco_secret_key }}"
