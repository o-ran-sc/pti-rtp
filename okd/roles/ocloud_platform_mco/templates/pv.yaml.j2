---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: pv-{{ item }}
spec:
  capacity:
    storage: "{{ ocloud_platform_mco_pv_size }}"
  volumeMode: "{{ ocloud_platform_mco_pv_mode }}"
  accessModes:
  - ReadWriteOnce
  persistentVolumeReclaimPolicy: Delete
  storageClassName: "{{ ocloud_platform_mco_storageclass }}"
  local:
    path: "{{ ocloud_platform_mco_pv_path }}"
  nodeAffinity:
    required:
      nodeSelectorTerms:
      - matchExpressions:
        - key: kubernetes.io/hostname
          operator: In
          values:
          - {{ item }}
