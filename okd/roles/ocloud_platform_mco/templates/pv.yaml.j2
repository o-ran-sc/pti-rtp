---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: pv1-{{ item }}
spec:
  capacity:
    storage: "1Gi"
  volumeMode: "Filesystem"
  accessModes:
  - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  storageClassName: "local-storage"
  local:
    path: "/dev/disk/by-partlabel/pv1"
  nodeAffinity:
    required:
      nodeSelectorTerms:
      - matchExpressions:
        - key: kubernetes.io/hostname
          operator: In
          values:
          - {{ item }}
